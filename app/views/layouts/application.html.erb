<!DOCTYPE html>
<html>
<head>
  <title>Shft</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>

<%= render 'layouts/user'%>

<% if params[:controller] == 'projects'&& params[:action] == 'show' %>
	<%= render 'layouts/header'%>
<% end %>

<div class="container">
	<%= yield %>
</div>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
</body>

</html>
